# https://prograils.com/posts/capistrano-deploy-to-ubuntu-with-systemd-nginx-puma-and-rbenv
[Unit]
Description=Bets Accounting Puma Server
After=network.target

[Service]
Type=simple

User=deployer
Group=deployer

WorkingDirectory=/home/deployer/applications/bets_accounting/current

ExecStart=/home/deployer/.rbenv/bin/rbenv exec bundle exec puma -C /home/deployer/applications/bets_accounting/current/config/puma.rb
ExecStop=/home/deployer/.rbenv/bin/rbenv exec bundle exec pumactl -F /home/deployer/applications/bets_accounting/current/config/puma.rb stop
ExecReload=/home/deployer/.rbenv/bin/rbenv exec bundle exec pumactl -F /home/deployer/applications/bets_accounting/current/config/puma.rb phased-restart


TimeoutSec=15
Restart=always
KillMode=process

[Install]
WantedBy=multi-user.target
